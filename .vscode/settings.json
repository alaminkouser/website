{
  "editor.rulers": [80],
  "files.associations": {
    "*.html": "jinja-html"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "[typst]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "myriad-dreamin.tinymist"
  },
  "tinymist.fontPaths": [
    "./resume/backend/fonts"
  ],
  "tinymist.typstExtraArgs": [
    "--ignore-system-fonts",
    "--font-path",
    "./resume/backend/fonts",
    "resume/main.typ"
  ]
}